{
  "drive": "DriveMysql",
  "database": "default",
  "table": "user",
  "columns": [
    "id",
    "user",
    "pass",
    "status"
  ],
  "limitpage": "1",
  "where": {
    "require" : {
      "id" : "/^[0-9]*$/"
    },
    "optional": {
      "user": "/^[0-9]*$/",
      "pass": "/^[0-9]*$/",
      "email": "/[-0-9a-zA-Z.+_]+@[-0-9a-zA-Z.+_]+.[a-zA-Z]{2,4}/"
    }
  },
  "requires": {
    "REQUEST": [
      "GET",
      "POST",
      "PUT",
      "DELETE"
    ]
  }
}