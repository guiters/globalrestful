{
  "drive": "DriveMysql",
  "database": "default",
  "connections": "local",
  "table": "user",
  "columns": [
    "id",
    "user",
    "pass",
    "status"
  ],
  "limitpage": "1",
  "where": {
    "optional": {
      "id": "/^[0-9]*$/",
      "user": "/^[0-9]*$/",
      "pass": "/^[0-9]*$/",
      "status": "/^[0-9]*$/"
    }
  },
  "requires": {
    "REQUEST": [
      "GET",
      "POST",
      "PUT",
      "DELETE"
    ]
  }
}