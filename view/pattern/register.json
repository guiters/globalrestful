{
  "drive": "DriveMysql",
  "database": "user",
  "table": "users",
  "columns": [
    "id",
    "user",
    "pass",
    "status"
  ],
  "limitpage": "1",
  "where": {
    "require": {
      "id": "/^[0-9]*$/"
    },
    "optional": {
      "id": "/^[0-9]*$/",
      "user": "^[a-zA-Z0-9_.-]*$",
      "password": "^[a-zA-Z0-9_.-]*$",
      "status": "/^[0-9]*$/"
    }
  },
  "requires": {
    "REQUEST": [
      "POST"
    ],
    "AUTH": {
      "header": {
        "info": "Token",
        "method": {
          "security": "{POST}{$this->result}{Token}(TokenValidate)[info]"
        }
      }
    }
  }
}